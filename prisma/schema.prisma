generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model Payment {
  id        String   @id() @default(uuid())
  amount    Int
  currency  String
  method    String
  status    String
  txId      String   @map("external_provider_transaction_id")
  productId String   @map("product_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}
