{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": { 
    "^.+\\.(t|j)s$": [
      "@swc/jest",
      {
        "jsc": {
          "target": "es2021"
        },
        "sourceMaps": true
      }
    ] 
  },
  "coverageProvider": "v8",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/**/index.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/generated/",
    "/tests/"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@core/(.*)$": "<rootDir>/src/core/$1",
    "^@domain/(.*)$": "<rootDir>/src/core/domain/$1",
    "^@infra/(.*)$": "<rootDir>/src/infra/$1"
  },
  "transformIgnorePatterns": ["/node_modules/(?!uuid)/"],
  "maxWorkers": 1,
  "testTimeout": 60000
}